<!DOCTYPE html>
<html>
  <head>
    <title>QAboard</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if admin_user_signed_in? %>
        <ul>
          <li>
            <%= link_to "掲示板", admin_trees_path %>
          </li>
          <li>
            <%= link_to "管理者一覧", admin_admin_users_path %>
          </li>
          <li>
            <%= link_to "拠点担当者一覧", admin_end_users_path %>
          </li>
          <li>
            <%= link_to "拠点マスタ", admin_areas_path %>
          </li>
          <li>
            <%= link_to "業務マスタ", admin_jobs_path %>
          </li>
          <li>
            <%= link_to "マイページ", admin_end_user_path(current_admin_user.id) %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_admin_user_session_path, method: :delete %>
          </li>
        </ul>
      <% elsif end_user_signed_in? %>
        <ul>
          <li>
            <%= link_to "掲示板", trees_path %>
          </li>
          <li>
            <%= link_to "拠点担当者一覧", end_users_path %>
          </li>
          <li>
            <%= link_to "マイページ", end_user_path(current_end_user.id) %>
          </li>
          <li>
            <%= link_to "ログアウト", destroy_end_user_session_path, method: :delete %>
          </li>
        </ul>
      <% else %>
        <ul>
          <li>
            <%= link_to "新規登録", new_end_user_registration_path %>
          </li>
          <li>
            <%= link_to "ログイン", new_end_user_session_path %>
          </li>
        </ul>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
