<!--<h1>Admin::Areas#edit</h1>-->
<div class = "container-fluid">
  <div class = "row">
    <h5 class="mb-5 ml-3">拠点マスタ編集</h5>
  </div>

  <%= form_with model: @area, url: admin_area_path(@area.id), method: :patch do |f| %>
    <div class="form-group row">
      <%= f.label :id, "ID", class: "col-md-2 offset-1" %>
      <div class="col-md-2"><%= @area.id%></div>
    </div>
    <div class="form-group row">
      <%= f.label :name, "拠点名", class: "col-md-2 offset-1" %>
      <%= f.text_field :name, class: "col-md-2" %>
    </div>
    <div class="form-group row">
      <%= f.label :is_deleted, "拠点ステータス", class: "col-md-2 offset-1" %>
      <%= f.radio_button :is_deleted, false, checked: true %>&emsp;
      <%= f.label :is_deleted, "有効",value: false %>&emsp;&emsp;
      <%= f.radio_button :is_deleted, true %>&emsp;
      <%= f.label :is_deleted, "廃止", value: true %>
    </div>
    <div class="form-group row offset-3 mt-4">
      <%= f.submit "変更を保存", class: "btn btn-secondary" %>
    
  <% end %>
</div>