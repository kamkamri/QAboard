<!--<h1>Admin::AdminUsers#show</h1>-->
<div class = "container-fluid">

  <div class = "row">
    <h5 class="mb-5 ml-5">登録情報</h5>
  </div>

  <div class = "row">
    <div class = "col-md-3 text-center">
      <%= image_tag @admin_user.get_profile_image(200,200),class: "img-fluid" %>
    </div>
    <div class="col-md-6">
      <%= link_to "登録情報変更", edit_admin_admin_user_path(current_admin_user.id), class: "btn btn-secondary" %>
      <%= link_to "パスワード変更", edit_pass_admin_admin_user_path(current_admin_user.id), class: "btn btn-secondary" %>
      <table class="table">
        <tbody>
          <tr>
            <th>社員番号</th>
            <td><%= @admin_user.employee_number %></td>
          </tr>
          <tr>
            <th>氏名</th>
            <td><%= @admin_user.name_display %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @admin_user.email %></td>
          </tr>
          <tr>
            <th>所属拠点</th>
            <td><%= @admin_user.area.name %></td>
          </tr>
          <tr>
            <th>担当拠点</th>
            <td>
              <% @admin_user.areas.each do |area| %>
                <%= area.name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>担当業務</th>
            <td>
              <% @admin_user.jobs.each do |job| %>
                <%= job.name %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>